  <%= f.text_field :image_url %></div>

  <div><%= f.label :url %><br />
  <%= f.text_field :url %></div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="form-group">
