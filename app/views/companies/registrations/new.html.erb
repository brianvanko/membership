<h2>Sign up :)</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :phone %><br />
  <%= f.text_field :phone %></div>
  
  <div><%= f.label :address %><br />
  <%= f.text_field :address %></div>

  <div><%= f.label :city %><br />
  <%= f.text_field :city %></div>

  <div><%= f.label :state %><br />
  <%= f.text_field :state %></div>

  <div><%= f.label :zipcode %><br />
  <%= f.text_field :zipcode %></div>

  <div><%= f.label :image_url %><br />
  <%= f.text_field :image_url %></div>

  <div><%= f.label :url %><br />
  <%= f.text_field :url %></div>

  <div><%= f.label :description %><br />
  <%= f.text_field :description %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div><%= f.submit "Sign up", class: "btn btn-primary btn-lg" %></div>
<% end %>

<%= render "companies/shared/links" %>
